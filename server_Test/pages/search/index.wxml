<view class="search_row">
  <input value="{{inpValue}}" placeholder="请输入您要查找的书籍名" bindinput="handleInput"></input>
  <button bindtap="handleCancel" hidden="{{!isFocus}}" >取消</button>
</view>
<view class="goods_group" hidden="{{isSearch}}">
  <text class="delimiter">/</text>
  <text class="title">以下是搜索结果</text>
  <text class="delimiter">/</text>
</view>

<view class="first_tab">
      <navigator class="goods_item"
      wx:for="{{books}}"
      wx:key="book_id"
      url="/pages/introduce/index?book_id={{item.book_id}}"
      >
          <!-- 左侧 图片容器 -->
          <view class="goods_img_wrap">
            <image mode="widthFix" src="{{item.img}}"></image>
          </view>
          <!-- 右侧 商品容器 -->
          <view class="goods_info_wrap">
            <view class="goods_name">{{item.book_name}}</view>
            <view class="goods_price">作者：{{item.book_author}}</view>
            <text class="goods_intro">{{item.introduce}}</text>
            
          </view>
        </navigator>
</view>

