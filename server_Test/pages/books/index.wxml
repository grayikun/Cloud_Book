<view class="cates">
  <SearchInput></SearchInput>
  <!-- 左边 -->
  <view class="cates_container">
    <scroll-view class="left_menu" scroll-y>
      <view class="menu_item {{item.sort===currentTab?'active':''}}" wx:for="{{leftMenuList}}" wx:key="*this" bindtap="handleItemTap" id="{{item.sort}}">{{item.sort}}</view>
   </scroll-view>

  <!-- 右边 -->
    <scroll-view class="right_content" scroll-y scroll-top="{{scrollTop}}">
      <view class="goods_group" >
        <view class="goods_title">
          <text class="delimiter">/</text>
          <text class="title">{{currentTab}}</text>
          <text class="delimiter">/</text>
        </view>

        <view class="goods_list">
          <navigator wx:for="{{rightBooks}}" wx:key="book_id" url="/pages/introduce/index?book_id={{item.book_id}}">
            <image mode="widthFix" src="{{item.img}}"></image>
            <view class="goods_name">{{item.book_name}}</view>
          </navigator>
        </view>
      </view>
    </scroll-view>

  </view>
</view>
