      <view class="full-button"  open-type="getUserInfo" bindtap="writeComment" data-id="{{Book.book_id}}" data-name="{{Book.book_name}}"> 写评论 </view>
    </view> -->
</view>
 
  <view class="comment-container">
    <view class="comment-title">
      <text>--------- 评论 ---------</text>
    </view>
    
	<!-- // 加载中进度条 -->
    <view class="comment-loading" wx:if="{{commentLoading}}">
      <view class="donut"></view>
    </view>
    
	<!-- // 评论布局列表 -->
    <view class="comment-area" wx:else>
		<!-- // 有评论数据 -->
      <block wx:if="{{commentList.length > 0}}">
        <view class="comment-item" wx:for="{{commentList}}" wx:key="id">
        	<!-- // 头像 -->
          <view class="avatar-container">
            <image mode="scaleToFill" src="{{item.uavatar}}" class="user-avatar"></image>
          </view>
			<!-- // 用户名、内容、评论时间 -->
          <view class="comment-content">
            <text class="user-name">{{item.uname}}</text>
            <text class="user-comment">{{item.comment}}</text>
            <text class="comment-time">{{item.create_time}}      {{item.phone}}</text>
            
          </view>
        </view>
      </block>
		<!-- // 没有评论提示布局 -->
      <block wx:else>
        <view class="comment-placeholder">来当第一个评论的人吧～</view>
      </block>

    </view>
  </view>

