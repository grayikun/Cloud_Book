<view class="book-container bg-white">

    <view class="book-info">
    <!-- // 书籍图片 -->
      <image bindtap="preview" class="book-image" mode="scaleToFill" src="{{intro.img}}"></image>
	<!-- // 书籍文字信息 -->
      <view class="book-desc">
        <text class="book-main-text">{{intro.book_name}}</text>
        <text class="book-text">作者： {{intro.book_author}}</text>
        <text class="book-text">分类： {{intro.sort}}</text>
        


      </view>
    </view>
    <view class="button-area" bindtap="handleCollect">
          <text class="iconfont {{isCollect?'icon-jiaxingshoucangtianchong':'icon-jiaxingshoucang'}} "></text>
          <view class="collect_text">收藏</view>
    </view>
</view>

<view class="btm_tool">
    <popup-left show="{{showleft}}" titles="{{titles}}"></popup-left>
    <view class="tool_item btn_cart" bindtap="showleft">
    查看章节目录
    </view>
    <view class="tool_item btn_buy" bindtap="handleRead">
    开始阅读
    </view>
     <view class="tool_item btn_comment" open-type="getUserInfo" bindtap="writeComment" data-id="{{Book.book_id}}" data-name="{{Book.book_name}}">
    写评论
    </view>
